<idea-plugin>
    <id>com.tomhanetz.bazel-for-human-beings</id>
    <name>Bazel For Human Beings</name>
    <vendor email="tomhanetz@gmail.com" url="http://www.yourcompany.com">Tom Hanetz</vendor>

    <description><![CDATA[
    Enter short description for your plugin here.<br>
    <em>most HTML tags may be used</em>
    ]]></description>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <!-- uncomment to enable plugin in all products
    <depends>com.intellij.modules.lang</depends>
    -->

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
        <configurationType implementation="BazelConfigurationType"/>
        <runConfigurationProducer implementation="BazelRunConfigurationProducer" />
        <applicationConfigurable instance="BazelApplicationSettingsConfigurable"/>
        <applicationService serviceInterface="BazelApplicationSettings" serviceImplementation="BazelApplicationSettings" />
        <!--<configurationType implementation="BazelTestConfigurationType"/>-->
        <!--<runConfigurationProducer implementation="BazelTestRunConfigurationProducer" />-->
    </extensions>

    <actions>
        <!-- Add your actions here -->
    </actions>
</idea-plugin>